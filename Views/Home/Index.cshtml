@model System.Collections.Generic.List<JesseMichael.Models.Home.FeedObject>



<script>
    function blogEnter(id) {
        var r = Math.floor((Math.random() * 55) + 200);;
        var g = Math.floor((Math.random() * 55) + 200);;
        var b = Math.floor((Math.random() * 55) + 200);;

        var rand = (r.toString(16) + g.toString(16) + b.toString(16));
        $("#box-"+id).animate({ backgroundColor: '#' + rand });

        try {
            document.getElementById(id).play();
        }
        catch (er) { }

    }

    function blogExit(id) {
        $("#box-" + id).animate({ backgroundColor: '#f8f8f8' })
        try {
            document.getElementById(id).pause();
        }
        catch (er) { }
    }


</script>


<div class ="blog">

@foreach(JesseMichael.Models.Home.FeedObject feedObject in @Model)
{
    <div id ="box-@feedObject.id" class="blog-box" style="@feedObject.style;">
        @Html.Raw(feedObject.content)


        <br />
    
        <div class="blog-discript">
            @Html.Raw(feedObject.source)
        </div>
    
        <div class="blog-date">
            @Html.Raw(feedObject.dateTimeString)
        </div>
        
    </div>
    
    <script>
        $("#box-@feedObject.id").mouseenter(function(){
            blogEnter('@feedObject.id');
        });
        $("#box-@feedObject.id").mouseleave(function () {
            blogExit('@feedObject.id');
        });
    </script>
}

</div>

<br /><br />



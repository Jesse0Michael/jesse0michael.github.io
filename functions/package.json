    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/twit": "^2.2.21",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.3.0",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.1.6",
    "typescript": "^3.2.2"
  },
  "private": true
}
